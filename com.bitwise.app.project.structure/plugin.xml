<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.newWizards">
      <category
            id="com.bitwise.app.project.structure.category"
            name="ETL">
      </category>
      <wizard
            category="com.bitwise.app.project.structure.category"
            class="com.bitwise.app.project.structure.wizard.CustomWizard"
            id="com.bitwise.app.project.structure.wizard"
            name="ETL Project"
            project="true">
      </wizard>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            class="org.eclipse.ui.navigator.CommonNavigator"
            id="com.bitwise.app.project.structure.navigator"
            name="Project Explorer">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.navigator.viewer">
      <viewerActionBinding
            viewerId="com.bitwise.app.project.structure.navigator">
         <includes>
            <actionExtension
                  pattern="org.eclipse.ui.navigator.resources.*">
            </actionExtension>
         </includes>
      </viewerActionBinding>
      <viewerContentBinding
            viewerId="com.bitwise.app.project.structure.navigator">
         <includes>
            <contentExtension
                  pattern="org.eclipse.ui.navigator.resourceContent">
            </contentExtension>
            <contentExtension
                  pattern="org.eclipse.ui.navigator.resources.filters.*">
            </contentExtension>
            <contentExtension
                  pattern="org.eclipse.ui.navigator.resources.linkHelper">
            </contentExtension>
            <contentExtension
                  pattern="org.eclipse.ui.navigator.resources.workingSets">
            </contentExtension>
         </includes>
      </viewerContentBinding>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="com.bitwise.app.perspective.ETLPerspective">
         <view
               closeable="true"
               id="org.eclipse.gef.ui.palette_view"
               minimized="false"
               moveable="true"
               ratio="0.25"
               relationship="left"
               relative="org.eclipse.ui.editorss"
               showTitle="true"
               visible="true">
         </view>
         <view
               closeable="true"
               id="com.bitwise.app.project.structure.navigator"
               minimized="false"
               ratio="0.25"
               relationship="bottom"
               relative="org.eclipse.gef.ui.palette_view">
         </view>
         <view
               closeable="true"
               id="org.eclipse.ui.console.ConsoleView"
               moveable="true"
               relationship="bottom"
               relative="org.eclipse.ui.editorss"
               visible="true">
         </view>
         <view
               closeable="true"
               id="org.eclipse.ui.views.PropertySheet"
               relationship="stack"
               relative="org.eclipse.ui.console.ConsoleView"
               visible="true">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         id="com.bitwise.app.project.structure.projectNature"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run
               class="com.bitwise.app.project.structure.natures.ProjectNature">
         </run>
      </runtime>
   </extension>
  
</plugin>
